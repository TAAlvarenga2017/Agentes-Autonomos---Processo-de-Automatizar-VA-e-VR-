# docker-compose.yml
version: '3.8'

services:
  # Aplicação VR/VA
  app:
    build: .
    ports:
      - "8501:8501"
    volumes:
      - ./data:/app/data
    depends_on:
      - ollama
    environment:
      - OLLAMA_HOST=http://ollama:11434

  # Serviço Ollama (IA)
  ollama:
    build: ./ollama
    ports:
      - "11434:11434"
    volumes:
      - ollama_data:/root/.ollama

volumes:
  ollama_data: